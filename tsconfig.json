{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "esnext", // Adjusted
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowJs": true,
    "noEmit": false,  // Adjusted
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src",
    "test"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}

